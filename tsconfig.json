{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "lib": ["es5", "es6", "dom"]
  },
  "include": ["components", "hooks", "types", "ChatWidget.tsx"],
  "exclude": ["node_modules", "dist"]
}
